<% content_for :header do %>
  <div class="grid_12 alpha omega">
    <h1><%= portrait @jester, 48 %> <%= @jester %> <%= content_tag :small, "← that’s you" if current_jester == @jester %></h1>
  </div>
<% end %>

<div class="grid_4 alpha">
  <dl>
    <dt>Last played</dt>
    <dd><%= extended_date @jester.last_played %></dd>
  </dl>
</div>
<div class="grid_4">
  <dl>
    <dt>Last MCed</dt>
    <dd><%= extended_date @jester.last_mced %></dd>
  </dl>
</div>
<div class="grid_4 omega">
  <dl>
    <dt>Current percentage</dt>
    <dd><%= "%.1f%%" % @jester.percentage(3.months) %> <small>(Last 3 months)</small></dd>
  </dl>
</div>
